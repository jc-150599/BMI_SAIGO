<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BMI_SAIGO"
             x:Class="BMI_SAIGO.MainPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="JK3A 14 境駿太"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            
            
            <Label Text="身長を入力してください"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Entry x:Name="height"
                   Text=""
                   VerticalOptions="CenterAndExpand" 
                   HorizontalOptions="CenterAndExpand"
                   WidthRequest="100"/>

            <Label Text="体重を入力してください"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Entry x:Name="weight"
                   Text=""
                   VerticalOptions="CenterAndExpand" 
                   HorizontalOptions="CenterAndExpand"
                   WidthRequest="100"/>

            <Button Text="計算"
                   VerticalOptions="CenterAndExpand" 
                   HorizontalOptions="CenterAndExpand"
                    x:Name="BMI_Button"
                    Clicked="BMI_Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>